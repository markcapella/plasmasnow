<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop">
  <id>plasmasnow.desktop</id>
  <metadata_license>gpl-3+</metadata_license>
  <name>plasmasnow</name>
  <summary>Let it snow on your desktop.</summary>
  <description>
    <p>
       plasmasnow creates on your desktop:
       <ul>
       <li> Snow </li>
       <li> Santa </li>
       <li> Moon </li>
       <li> Stars </li>
       <li> Sky </li>
       <li> Birds </li>
       <li> Scenery </li>
    </ul>
    </p>
    <p>
       Preferences can be set with the comprehensive graphical interface.
    </p>
    <p>
       plasmasnow can also be used in combination with XScreenSaver.
    </p>
  </description>
  <keywords>
    <keyword>snow</keyword>
    <keyword>santa</keyword>
    <keyword>xmas</keyword>
  </keywords>
  <url type="homepage">https://github.com/markcapella/plasmasnow</url>
  <url type="bugtracker">https://github.com/markcapella/plasmasnow/issues/</url>
  <provides>
    <binary>plasmasnow</binary>
  </provides>
  <releases>
    <release version="plasmasnow_VERSION" date="plasmasnow_DATE"/>
  </releases>
  <screenshots>
    <screenshot type="default">
       <image>https://github.com/markcapella/plasmasnow/blob/main/assets/images/screenshot.png</image>
    </screenshot>
  </screenshots>
  <project_license>gpl-3+</project_license>
  <developer_name>Mark Capella</developer_name>
  <update_contact>markcapella@twcny.rr.com</update_contact>
</component>

